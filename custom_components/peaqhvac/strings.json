    "disable": {
      "name": "Disable Peaqhvac",
      "description": "Disables Peaqhvac"
    },
    "set_mode": {
      "name": "Set house-mode",
      "description": "Sets the house in modes and can have peaqhvac act accordingly.",
      "fields": {
        "mode": {
          "name": "Mode",
          "description": "The mode you wish to set."
        }
      }
    },
    "boost_water": {
      "name": "Boost Water",
      "description": "Override-service to call booster for x minutes (min 10, max 60). Remember delay to Nibe-api",
      "fields": {
        "timeout": {
          "name": "Timeout",
          "description": "The timeout in minutes."
        }
      }
    }
  }
